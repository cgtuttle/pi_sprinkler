<%= form_for(@program) do |f| %>
  <%= render partial: "layouts/errors", locals: {resource: @program} %>

  <div class="row">
	  <div class="form-group col-md-4">
	    <%= f.label :name %>
	    <%= f.text_field :name, class: "form-control" %>
	  </div>
	</div>
	<div class="row">
	  <div class="form-group col-md-2">
	  	<%= f.label :start_time %>
	  	<%= f.time_select :start_time, class: "form-control" %>
	  </div>
	</div>

	<div class="well">
		<div class="row">
			<div class="col-md-3">
				<%= render partial: "rules", locals: {f: f} %>
			</div>
			<div class="col-md-3">
				<%= render partial: "stations", locals: {program: @program, f: f} %>
			</div>
		</div>		
	</div>

  <div class="form-group">
    <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>

<% end %>
